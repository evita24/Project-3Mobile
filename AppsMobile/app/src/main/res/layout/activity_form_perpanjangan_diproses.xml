<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.FormPerpanjanganDiproses">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/cardjudulstatus"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/gray"
        android:outlineAmbientShadowColor="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="STATUS"
                    android:textColor="@color/greendark"
                    android:textSize="@dimen/_18ssp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/statusback"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back"
                android:backgroundTint="@color/white"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/detail_form_status_shimmer" />

                </com.facebook.shimmer.ShimmerFrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/_1sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardMaxElevation="@dimen/_20sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green">
                        <TextView
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perpanjangan No Induk Seniman"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Induk Kependudukan"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/editTextNIK"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/bg_editext"
                            android:ems="10"
                            android:hint="36XXXXXXXXXXXX"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Lengkap"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/editTextNamaLengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/bg_editext"
                            android:ems="10"
                            android:hint="Masukkan Nama Lengkap Sesuai KTP"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="No Induk"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/noinduk"
                            android:paddingRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/bg_editext"
                            android:ems="10"
                            android:hint="Masukkan Nama Lengkap Sesuai KTP"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Surat Keterangan Dari Desa"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/bg_editext"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/selectFileButton1"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                app:cornerRadius="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:layout_marginBottom="-5dp"
                                android:backgroundTint="@color/greendark"
                                android:text="Pilih File"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/textViewButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingEnd="@dimen/_11sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:hint="Gambar berformat PNG, JPG, SVG"
                                android:gravity="center|left"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />
                            />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Foto Kartu Tanda Penduduk"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/bg_editext"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/selectFileButton2"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:layout_marginBottom="-5dp"
                                android:backgroundTint="@color/greendark"
                                android:text="Pilih File"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp"
                                app:cornerRadius="@dimen/_2sdp" />

                            <TextView
                                android:id="@+id/textViewButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingEnd="@dimen/_11sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:hint="Gambar berformat PNG, JPG, SVG"
                                android:gravity="center|left"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />
                            />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Pass Foto"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/bg_editext"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/selectFileButton3"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                app:cornerRadius="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:layout_marginBottom="-5dp"
                                android:backgroundTint="@color/greendark"
                                android:text="Pilih File"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/textViewButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingEnd="@dimen/_11sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:hint="Gambar berformat PNG, JPG, SVG"
                                android:gravity="center|left"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:backgroundTint="@color/yellow">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Diproses"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:src="@drawable/animproses"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Permintaan anda sedang diproses\nHarap tunggu notifikasi selanjutnya!"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>